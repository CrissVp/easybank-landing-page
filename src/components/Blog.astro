<style>
	.blog {
		gap: 32px;
		display: flex;
		padding: 64px 20px;
		align-items: center;
		flex-direction: column;
		background-color: var(--very-light-gray);
	}

	.blog h2 {
		font-size: 32px;
		font-weight: 400;
		color: var(--dark-blue);
	}

	.blog__articles {
		gap: 32px;
		display: flex;
		flex-direction: column;
	}

	.article {
		overflow: hidden;
		border-radius: 6px;
		background-color: var(--white);
	}

	.article img {
		width: 100%;
		height: 250px;
		object-fit: cover;
		object-position: center;
	}

	.article__description {
		gap: 12px;
		display: flex;
		padding: 24px;
		flex-direction: column;
	}

	.article__description span {
		font-size: 14px;
		color: var(--grayish-blue);
	}

	.article__description h3 {
		font-size: 20px;
		font-weight: 400;
		color: var(--dark-blue);
	}

	.article__description h3:hover {
		cursor: pointer;
		color: var(--lime-green);
	}

	.article__description p {
		font-weight: 300;
		font-size: 16px;
		color: var(--grayish-blue);
	}

	@media (min-width: 640px) {
		.blog__articles {
			flex-wrap: wrap;
			flex-direction: row;
		}

		.article {
			width: calc(50% - 16px);
		}
	}

	@media (min-width: 1024px) {
		.blog {
			align-items: flex-start;
		}

		.article {
			flex: 1;
		}
	}

	@media (min-width: 1440px) {
		.blog {
			padding-inline: calc((100% - 1400px) / 2);
		}
	}
</style>
